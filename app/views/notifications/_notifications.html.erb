<% if current_user %>
  <div class="container">
    <h3 class="text-center text-muted fw-bold mt-5">Notifications</h3>
    <p class="text-center text-muted fw-light ">All your recent post notifications will pop here!</p>
    <hr>
    <%= turbo_stream_from "notifications_#{user.id}" %>
    <%= turbo_frame_tag "notifications_#{user.id}" do %>
      <% @notifications.each do |notification| %>
        <%= render notification, user: notification.to_notification.creator, post: notification.to_notification.post, unread: notification.unread? %>
      <% end %>
    <% end %>
  </div>
<% end %>
