<div>
  <div class="d-flex">
    <div class="user_details">
      <% if user&.email.present? && post&.title.present? %>
        <%= user.email %> just commented on <%= link_to(post.title, post, data: { turbo_frame: '_top' }) %>
      <% else %>
        <span class="text-danger">User deleted the comment</span>
      <% end %>
      <% if unread %>
        <span class="badge bg-danger">Unread</span>
      <% else %>
        <span class="badge bg-success">Read</span>
      <% end %>
    </div>
  </div>
  <hr>
</div>
