<div class="d-flex justify-content-center align-items-center flex-column form_container shadow">
  <div class="form_box shadow-lg rounded  p-5 ">
    <h3 class="text-center mb-2 text-muted h1 fw-bold">Signin</h3>
    <hr>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: "false" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <form class="p-4 p-md-5 border rounded-3 bg-light">
        <div class="form-floating mb-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating mb-3">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
          <label for="floatingPassword">Password</label>
        </div>
        <div class="form-floating mb-3">
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
          <label for="floatingPassword">Password</label>
        </div>
        <div class="checkbox mb-3">
          <label>
            <input type="checkbox" value="remember-me"> Remember me
          </label>
        </div>
        <%= f.submit "Sign up", class: 'w-100 btn btn-lg btn-dark' %>
        <%= render "devise/shared/links" %>
        <hr class="my-4">
        <small class="text-muted">By clicking Sign up, you agree to the terms of use.</small>
      </form>
    <% end %>
  </div>
</div>
</div>
