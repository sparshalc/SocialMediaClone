<div class="d-flex justify-content-center align-items-center flex-column form_container shadow">
  <div class="form_box shadow-lg rounded  p-5 ">
    <h3 class="text-center mb-2 text-muted h1 fw-bold">Login</h3>
    <hr>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-floating">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        <label for="floatingInput">Email address</label>
      </div>
      <div class="form-floating mt-3 mb-3">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
        <label for="floatingInput">Password</label>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field mb-2">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-dark w-100' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links'%>
  </div>
</div>
</div>
